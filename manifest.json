{

  "description": "Pixiv button",
  "manifest_version": 2,
  "name": "Pixiv Button",
  "version": "0.1.1.0",
  "icons": {
    "48": "icons/page-48.png"
  },

  "applications": {
    "gecko": {
      "id": "pixiv-button@firefox",
      "strict_min_version": "57.0"
    }
  },


  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/page-48.png"
  },

  "permissions": ["contextMenus"]

}
